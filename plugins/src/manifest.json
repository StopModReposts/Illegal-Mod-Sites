    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "permissions": [
        "https://api.varden.info/smr/sitelist.php"
    ],
    "manifest_version": 2,
    "content_security_policy": "default-src 'none'; style-src 'self'; script-src 'self'; connect-src https://api.varden.info; img-src 'self'"
}
